{
    "name": "exileed/rocketchat-monolog",
    "type": "library",
    "description": "RocketChat Monolog Handler",
    "keywords": [
        "exileed",
        "rocketchat-monolog"
    ],
    "homepage": "https://github.com/exileed/rocketchat-monolog",
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitriy Kuts (ExileeD)",
            "email": "me@exileed.com",
            "homepage": "https://exileed.com"
        }
    ],
    "require": {
        "php" : "~7.3",
        "monolog/monolog": "^2.0",
        "guzzlehttp/guzzle": "^6 || ^7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "ExileeD\\Monolog\\RocketChat\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ExileeD\\Monolog\\RocketChat\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
